<div id="<%= dom_id phrase %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Phrase:</strong>
    <%= phrase.phrase %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= phrase.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Key:</strong>
    <%= phrase.key_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Language:</strong>
    <%= phrase.language_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this phrase", phrase, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this phrase', edit_phrase_path(phrase), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
